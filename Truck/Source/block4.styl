.block4
	overflow hidden
	color #fff
	background colorDarkGray
	font-family 'Lato', sans-serif
	font-style normal
	h3
		color #ffffff
	h4
		@media (max-width: 992px)
			font-size 18px
	p
		font-weight: 400
		font-size: 15px
		line-height: 1.8
		@media (max-width: 992px)
			font-size: 14px
	.buttonLink
		color #fff
		background colorRed
		@media (max-width: 992px)
			font-size 26px
	.buttonLink:hover
		background colorGray
	.services
		background #3a3a3c
	.linkWrap
		margin-top 30px
		margin-bottom 30px
	.linkWrap *
		display block
		color #ffffff
		font-size 20px
		font-weight: 700
		text-decoration none
		padding 10px
		padding-left 30px
		@media (max-width: 992px)
			font-size 18px
	.linkWrap *:not(:last-child)
		border-bottom 1px solid #616163
	.linkWrap *:hover
		background colorRed